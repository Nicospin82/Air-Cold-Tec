---
import {instalaciones} from '../../data/instalaciones';
import Carruselinstalaciones from "../Carruselinstalaciones.astro";

const carruselinstalaciones = [...instalaciones, ...instalaciones];
---

<section class="pt-32">
        <div class="text-center mb-16">
        
            <h3 class="text-indigo-950  text-6xl font-bold">
                Nuestros <span class="font-light text-neutral-300">Trabajos</span>
            </h3>

        </div>
        
        <article class="overtflow-hidden">
            <div class="flex animate-scroll">
            {
                instalaciones.map((instalacion)=> (
                    <Carruselinstalaciones instalacion ={instalacion}/>
                ))
            }
            </div>

        </article>
</section>
<style>
    @keyframes scroll{
        0%{
            transform: translateX(0);
        }
        100%{
            transform: translateX(calc(-400px * 5 - 0.5rem *10));
        }
    }
    .animate-scroll{
        animation: scroll 30s linear infinite;
    }
    .animate-scroll:hover{
        animation-play-state: paused;
    }
</style>