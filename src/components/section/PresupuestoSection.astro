---
const {id} = Astro.props
---
<section>
<div id={id} class="flex flex-col mt-20 py-8 px-5 bg-blue-950 rounded-3xl mx-8 w-[600px] h-[500px]">
    <h2 class="mb-8 text-4xl tracking-tight font-extrabold text-center text-white">Presupuesto Personalizados</h2>
        <form action="https://formsubmit.co/0d0d6aab57d3954b8fc605e7aa66878c" method="POST" class="space-y-5 ">
            <div class="relative">
                <input type="email" name="email"  class="p-3 w-full text-sm rounded-2xl bg-transparent border border-slate-300 placeholder-gray-300 text-white" placeholder="IngreseSu@gmail.com/Numero de Celular" required>
            </div>
            <div class="relative">
                <input type="text" name="nombre"  class="p-3 w-full text-sm rounded-2xl bg-transparent border border-slate-300 placeholder-gray-300 text-white" placeholder="Nombre y Apellido" required>
            </div>
            <div class="sm:col-span-2 relative">
                <textarea  name="Mensaje" rows="6" class="p-3 w-full text-sm rounded-2xl bg-transparent border border-slate-300 placeholder-gray-300 text-white" placeholder="Marca del Equipo y Frigorias"></textarea>
            </div>
            <div class="sm:col-span-2 relative">
                <textarea  name="Mensaje" rows="6" class="p-3 w-full text-sm rounded-2xl bg-transparent border border-slate-300 placeholder-gray-300 text-white" placeholder="Zona a Realizar el Trabajo"></textarea>
            </div>
            <div class="sm:col-span-2 relative">
                <textarea  name="Mensaje" rows="6" class="p-3 w-full text-sm rounded-2xl bg-transparent border border-slate-300 placeholder-gray-300 text-white" placeholder="Ubicacion del Equipo(ej, casa normal, primer piso,etc)"></textarea>
            </div>
            <div class="sm:col-span-2 relative">
                <textarea  name="Mensaje" rows="6" class="p-3 w-full text-sm rounded-2xl bg-transparent border border-slate-300 placeholder-gray-300 text-white" placeholder="Urgencia del Trabajo"></textarea>
            </div>
            <button id="Mensaje" type="submit" class="flex items-center py-6 px-16 gap-2 ml-52 text-sm font-serif text-white rounded-3xl p-3 bg-gray-900 border border-slate-400 placeholder-gray-400 hover:text-slate-700 hover:bg-white">
                Enviar
            </button>
            <input type="hidden" name="_next" value="https://aircoldtec.netlify.app/#Trabajo">
            <input type="hidden" name="_captcha" value="false">
        </form>
        <br>
        
</div>
</section>
<script>
    document.getElementById("Mensaje").addEventListener("click", function() {
        alert("Mensaje enviado con exito, a la brevedad seras respondido. Gracias!");
    });
</script>