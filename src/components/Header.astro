---
const {id} = Astro.props
---
<header class="w-full">
    <div class="fixed z-50 bg-indigo-950 w-full border-b border-gray-700">
        <div class="px-6 md:px-1">
            <div class="flex items-center justify-between h-28">

                <!-- Logo y marca -->
                <div class="relative z-20">
                    <a href="/">
                        <img src="/img/iconosinfondo.png" alt="logo" class="w-[100px] h-auto xl:w-[160px] xl:h-auto lg:w-[160px] lg:h-auto">
                    </a>
                </div>
                <h5 class="text-xl text-cyan-400 font-bold xl:text-4xl xl:mr-16 lg:text-4xl lg:mr-12">Air Cold</h5>

                <!-- Menú hamburguesa -->
                <div class="flex justify-end md:border-l-1">
                    <input type="checkbox" id="icon" hidden>
                    <label for="icon" class="block relative z-20 p-6 -mr-6 cursor-pointer md:hidden">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-8">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                        </svg>
                    </label>
                </div>

                <!-- Menú lateral (abierto cuando se activa el checkbox) -->
                <div id="close" class="hidden md:block z-30 fixed inset-y-0 right-0 w-[calc(70%-4.5rem)] bg-indigo-950 border-l md:border-l-0 md:w-auto md:static">
                    <nav class="z-40 mt-20 flex flex-col h-full xl:mt-0 lg:mt-0 md:mt-0 md:flex-row justify-between md:items-center" id="nav-links">

                        <!-- Botón de cerrar 'X' -->
                        <label for="icon" class="block absolute top-0 left-10-0 p-6 cursor-pointer md:hidden z-30">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-8">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                            </svg>
                        </label>

                        <!-- Enlaces de navegación -->
                        <nav class="flex flex-wrap gap-11 p-5 items-center font-semibold italic">
                            <a class="underLine-animated " href="#Contactanos">Contactanos</a>
                            <a class="underLine-animated" href="#Trabajo">Nuestros Trabajos</a>
                            <a class="underLine-animated" href="#Servicios">Nuestros Servicios</a>
                            <a class="underLine-animated " href="/Presupuesto">Presupuestos</a>
                            
                        </nav>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</header>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const icon = document.getElementById('icon');
        const close = document.getElementById('close');
        icon.addEventListener('click', function () {
            close.classList.toggle('hidden');
        });
    });
</script>

<style>
    /* Animación blur para el fondo cuando haces scroll */
    #nav-bar {
        z-index: 1;
        animation: blur linear both;
        animation-timeline: scroll();
        animation-range: 0 500px;
    }
    @keyframes blur {
        to {
            color: whitesmoke;
            box-shadow: 0px 5px 150px -5px hsla(225, 9%, 73%, 0.795), 0px 0px 0px 0px hsla(218, 88%, 37%, 0.453);
            background: rgba(12, 18, 101, 0.586);
            backdrop-filter: blur(8px);
        }
    }

    /* Estilo para el efecto de la línea subrayada */
    .underLine-animated {
        background-color: transparent;
        position: relative;
        display: inline-block;
        text-decoration: none;
    }

    .underLine-animated::after {
        content: '';
        position: absolute;
        left: 0;
        bottom: 0;
        height: 2px;
        background-color: rgb(0, 195, 255);
        width: 100%;
        transform: scaleX(0);
        transition: transform 0.6s ease;
        transform-origin: bottom right;
    }

    .underLine-animated:hover::after {
        transform: scaleX(1);
        transform-origin: bottom right;
    }
</style>
